<!-- More Info Modal -->
<div class="modal fade" id="moreInfoModal" tabindex="-1" role="dialog" aria-labelledby="moreInfoModalTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <img id="info-pic" class="modal-image" src="" width="80%" height="350" preserveAspectRatio="xMidYMid slice"
          focusable="false">
        <br>
        <h5 class="modal-title" id="info-name"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
