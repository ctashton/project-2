{{!-- main page display--}}

{{!-- This will populate using the models and DB --}}
<div id="main">
  <div class="respop" id="results">
    {{!-- when loading index page pushes msg here from htmlroutes--}}

    <h1 class="msgtitle">{{msg}}</h1>
    <div class="row">
      {{#each cocktails}}
        <div class="col-md-3" data-id="{{this.id}}">
          <div class="drink-card card mb-4 shadow-sm" data-pic="{{this.pic}}" data-id="{{this.id}}"
            data-name="{{this.name}}" data-alcoholic="{{this.alcoholic}}" data-category="{{this.category}}"
            data-glass="{{this.glass}}" data-instructions="{{this.instructions}}"
            data-ingredients="{{this.ingredients}}">

            <img src="{{this.pic}}" class="card-img" width="100%" height="auto" preserveAspectRatio="xMidYMid slice"
              focusable="false" aria-label="{{this.name}}">
            <title>{{this.name}}</title>
            <rect width="100%" height="100%" fill="#55595c"></rect></img>
            <div class="card-img-overlay">
              <h5 class="drinkName card-title text-left">{{this.name}}</h5>
              {{!-- need to figure out how to capture liked drink --}}
              {{!-- <button id="fav-button-main" class="btn btn-dark btn-block" data-pic="{{this.pic}}" data-id="{{this.id}}"
